<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="18dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true">
        </LinearLayout>

        <!-- Imagens -->
        <HorizontalScrollView
            android:id="@+id/editEstabelecimentoScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/editEstabelecimentoPictureOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/style_foto_new_estabelecimento"
                    android:src="@drawable/default_estabelecimento_picture"/>

                <ImageView
                    android:id="@+id/editEstabelecimentoPictureTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/style_foto_new_estabelecimento"
                    android:src="@drawable/default_estabelecimento_picture"/>

                <ImageView
                    android:id="@+id/editEstabelecimentoPictureThree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/style_foto_new_estabelecimento"
                    android:src="@drawable/default_estabelecimento_picture"/>

                <ImageView
                    android:id="@+id/editEstabelecimentoPictureFour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/style_foto_new_estabelecimento"
                    android:src="@drawable/default_estabelecimento_picture"/>

                <ImageView
                    android:id="@+id/editEstabelecimentoPictureFive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/style_foto_new_estabelecimento"
                    android:src="@drawable/default_estabelecimento_picture"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Nome -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editEstabelecimentoScrollView"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:text="Nome:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editEstabelecimentoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="5dp"
            android:hint=" Ex: Churrasquinho do Zé"
            android:inputType="textPersonName"
            android:textSize="18dp"
            android:textStyle="italic"/>

        <!-- Endereço -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editEstabelecimentoNome"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="18dp"
            android:text="Endereço:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editEstabelecimentoEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="5dp"
            android:hint=" Ex: Rua Dias da Cruz"
            android:inputType="textPersonName"
            android:textSize="18dp"
            android:textStyle="italic"/>

        <!-- Número -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editEstabelecimentoEndereco"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="18dp"
            android:text="Número:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editEstabelecimentoNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:ems="5"
            android:inputType="number"
            android:textSize="18dp"/>

        <!-- Bairro -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editEstabelecimentoNumero"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="18dp"
            android:text="Bairro:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editEstabelecimentoBairro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:ems="10"
            android:hint=" Ex: Centro"
            android:inputType="textPersonName"
            android:textSize="18dp"
            android:textStyle="italic"/>

        <!-- UF -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editEstabelecimentoBairro"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="18dp"
            android:text="UF:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerEstabelecimentoUf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:entries="@array/uf"/>

        <!-- Categorias -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerEstabelecimentoUf"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="18dp"
            android:text="Categorias:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"/>

    </RelativeLayout>
</ScrollView>