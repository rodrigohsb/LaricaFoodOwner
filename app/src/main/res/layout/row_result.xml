<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="5dip">

    <!--  Image -->
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="60dip"
            android:layout_height="60dip"
            fresco:placeholderImage="@drawable/ic_home_hamburger"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="1dp"/>

    </LinearLayout>

    <!-- Nome-->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Mc Roger"
        android:textColor="#000000"
        android:textSize="18dip"
        android:textStyle="bold"/>

    <!-- DISTANCIA -->
    <LinearLayout
        android:id="@+id/linearLayoutDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_pin2"/>

        <TextView
            android:id="@+id/resultDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1.73km"
            android:textSize="13dip"/>
    </LinearLayout>

    <!-- STATUS -->
    <LinearLayout
        android:id="@+id/resultStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dip"
        android:layout_toRightOf="@id/linearLayoutDistance"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_open2"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Aberto"
            android:textSize="13dip"/>
    </LinearLayout>

    <!-- LIKE -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dip"
        android:layout_toRightOf="@id/resultStatus"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_like2"/>

        <TextView
            android:id="@+id/resultLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 68%"
            android:textSize="13dip"/>

    </LinearLayout>

    <!-- ARROW -->
    <LinearLayout
        android:id="@+id/resultArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/title"
        android:layout_marginRight="5dip"
        android:layout_marginTop="25dp"
        android:gravity="right">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/resultStatus"
        android:layout_marginTop="10dp"
        android:background="#e8e8e8"/>

</RelativeLayout>